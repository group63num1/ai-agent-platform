<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.demo.app.mapper.SystemConfigMapper">

    <resultMap id="SystemConfigResultMap" type="com.example.demo.app.entity.SystemConfig">
        <id column="id" property="id" />
        <result column="config_key" property="configKey" />
        <result column="config_value" property="configValue" />
        <result column="description" property="description" />
        <result column="type" property="type" />
        <result column="is_public" property="isPublic" />
        <result column="created_at" property="createdAt" />
        <result column="updated_at" property="updatedAt" />
    </resultMap>

    <sql id="SystemConfig_Column_List">
        id, config_key, config_value, description, type, is_public, created_at, updated_at
    </sql>

    <insert id="insert" parameterType="com.example.demo.app.entity.SystemConfig"
            useGeneratedKeys="true" keyProperty="id">
        INSERT INTO system_configs (
            config_key, config_value, description, type, is_public, created_at, updated_at
        ) VALUES (
                     #{configKey}, #{configValue}, #{description}, #{type}, #{isPublic}, NOW(), NOW()
                 )
    </insert>

    <select id="selectById" resultMap="SystemConfigResultMap">
        SELECT <include refid="SystemConfig_Column_List" />
        FROM system_configs
        WHERE id = #{id}
    </select>

    <select id="selectByKey" resultMap="SystemConfigResultMap">
        SELECT <include refid="SystemConfig_Column_List" />
        FROM system_configs
        WHERE config_key = #{configKey}
    </select>

    <select id="selectAll" resultMap="SystemConfigResultMap">
        SELECT <include refid="SystemConfig_Column_List" />
        FROM system_configs
        ORDER BY config_key
    </select>

    <select id="selectByIsPublic" resultMap="SystemConfigResultMap">
        SELECT <include refid="SystemConfig_Column_List" />
        FROM system_configs
        WHERE is_public = #{isPublic}
        ORDER BY config_key
    </select>

    <update id="update" parameterType="com.example.demo.app.entity.SystemConfig">
        UPDATE system_configs
        <set>
            <if test="configKey != null">config_key = #{configKey},</if>
            <if test="configValue != null">config_value = #{configValue},</if>
            <if test="description != null">description = #{description},</if>
            <if test="type != null">type = #{type},</if>
            <if test="isPublic != null">is_public = #{isPublic},</if>
            updated_at = NOW()
        </set>
        WHERE id = #{id}
    </update>

    <update id="updateValueByKey">
        UPDATE system_configs
        SET config_value = #{configValue}, updated_at = NOW()
        WHERE config_key = #{configKey}
    </update>

    <delete id="delete">
        DELETE FROM system_configs
        WHERE id = #{id}
    </delete>

    <delete id="deleteByKey">
        DELETE FROM system_configs
        WHERE config_key = #{configKey}
    </delete>

</mapper>