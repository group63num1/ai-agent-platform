# ==================== 服务配置 ====================
HOST=0.0.0.0
PORT=8000
DEBUG=false
LOG_LEVEL=INFO

# ==================== 数据库配置 ====================
# 数据库类型: mysql, postgresql, sqlite
DATABASE_TYPE=mysql

# MySQL/PostgreSQL 配置（Docker）
DATABASE_HOST=localhost
DATABASE_PORT=3307
DATABASE_USER=new_user
DATABASE_PASSWORD=new_pass_123
DATABASE_NAME=new_db

# SQLite 配置（仅当 DATABASE_TYPE=sqlite 时使用）
SQLITE_PATH=./data/ai_agent.db

# 连接池配置
DATABASE_POOL_SIZE=5
DATABASE_MAX_OVERFLOW=10

# ==================== Java 后端配置 ====================
JAVA_BACKEND_URL=http://localhost:8080
JAVA_BACKEND_TIMEOUT=30

# ==================== RAG 配置 ====================
CORPUS_PATH=./corpus
CHUNK_SIZE=1000
CHUNK_OVERLAP=200
RETRIEVAL_K=3

# ==================== Agent 配置 ====================
MAX_ITERATIONS=5
MAX_HISTORY_LENGTH=20
SUMMARY_TRIGGER=16
VERBOSE=true

# ==================== 插件配置 ====================
PLUGIN_TIMEOUT=30
PLUGIN_MAX_RETRIES=3

# ==================== 安全配置 ====================
# CORS 配置（多个用逗号分隔）
CORS_ORIGINS=*

# 请求限制（字节）
MAX_REQUEST_SIZE=10485760
